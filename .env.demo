ENVIRONMENT=demo

# Infrastructure — not secrets, safe to keep here
DATABASE_URL=postgresql+asyncpg://demo:demo_password@demo-db:5432/nocturn_demo
REDIS_URL=redis://demo-redis:6379/0

# LLM model overrides (model names are not secrets)
GEMINI_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# WhatsApp & SendGrid — intentionally empty (demo uses channel simulator)
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
SENDGRID_API_KEY=

# Demo admin credentials (demo-only, non-production values)
JWT_SECRET=demo-jwt-secret-not-for-production
ADMIN_USER=demo@nocturnai.com
ADMIN_PASSWORD=demo2026

# Frontend URL
ALLOWED_ORIGINS=http://localhost:3001,https://demo.nocturnai.com
